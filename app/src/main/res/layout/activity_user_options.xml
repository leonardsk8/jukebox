<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:animateLayoutChanges="true"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="150dp"
                android:src="@drawable/menu"

                />
            <ImageButton
                android:id="@+id/btnMap"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="82dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mapsmenu" />
            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnMap"
                android:layout_marginEnd="41dp"
                android:scaleType="fitCenter"
                android:src="@drawable/previewbar" />

            <ImageButton
                android:id="@+id/btnChargeAccount"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@id/btnProfile"
                android:layout_alignTop="@+id/btnHistory"
                android:scaleType="fitCenter"
                android:src="@drawable/chargeaccount" />
            <ImageButton
                android:id="@+id/btnListBar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/btnChargeAccount"
                android:layout_below="@+id/btnChargeAccount"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                android:src="@drawable/list" />

            <ImageButton
                android:id="@+id/btnHistory"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/btnMap"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/btnMap"
                android:scaleType="fitCenter"
                android:src="@drawable/history" />


            <ImageButton
                android:id="@+id/btnScan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/btnMap"
                android:layout_alignTop="@+id/btnListBar"
                android:scaleType="fitCenter"
                android:src="@drawable/scan" />

            <ImageButton
                android:id="@+id/btnExit"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                android:src="@drawable/exit"
                android:layout_alignStart="@+id/btnScan"
                android:layout_below="@+id/btnScan"
                />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>