<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.activity.PromotionActivity">
    <TextView
            android:text="Código Generado"
            android:background="@color/orange"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    >
        <ImageView
                android:id="@+id/id1"
                android:layout_width="78dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/discount"
                android:layout_alignParentStart="true"
                android:layout_marginStart="51dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="67dp"/>

        <ImageView
                android:id="@+id/id2"
                android:layout_width="78dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/shoppingbag"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="67dp"
                android:layout_marginEnd="60dp"
                android:layout_centerVertical="true"/>

        <ImageView
                android:layout_width="78dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/happy"
                android:layout_alignParentTop="true"
                android:layout_marginTop="26dp"
                android:layout_centerHorizontal="true"/>
        <TextView
                android:text="Fecha Expración"
                android:layout_marginTop="20dp"
                android:layout_below="@id/id1"
                android:layout_marginLeft="15dp"
                android:id="@+id/tvExpirationDatePro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Descripción"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tvExpirationDatePro"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/tvDescriptionPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="@string/timeHas"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tvDescriptionPro"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/tvTimeshasPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvCountPro"
                android:text="@string/timesDO"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tvTimeshasPro"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TextView
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="@string/code_ready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/apoyoTxt"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
                android:id="@+id/cvBtnCode"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="25dp"
                app:cardElevation="50dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/tvCodePromotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:text="CODIGO"
                        android:textColor="#fff"
                        android:textSize="18sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</LinearLayout>